{
    "compilerOptions": {
        "target": "ES6",
        "moduleResolution": "Node",
        "rootDir": "../src",
        "strict": true,
        "sourceMap": true,
        "lib": [
            "esnext",
            "DOM"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "emitDeclarationOnly": false,
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "noUnusedLocals": true,
        "useDefineForClassFields": true
    },
    "files": [
        "../src/index.ts",
        "../src/index-return-cons.ts"
    ]
}